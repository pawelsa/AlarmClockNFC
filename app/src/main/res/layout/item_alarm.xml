<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="blocksDescendants">

    <data>

        <variable
            name="alarmData"
            type="com.helpfulapps.alarmclock.views.clock_fragment.AlarmData" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item_alarm_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/comment_background"
        android:stateListAnimator="@animator/comment_selection">


        <TextView
            android:id="@+id/tv_item_alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@{alarmData.alarmTime}"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10:40" />

        <ImageView
            android:id="@+id/mv_item_alarm_expand"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="@+id/tv_item_alarm_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_item_alarm_time" />

        <TextView
            android:id="@+id/tv_item_alarm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:maxLines="1"
            android:text="@{alarmData.title}"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_alarm_item_repeating_days"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_alarm_time"
            tools:text="Robota" />

        <Switch
            android:id="@+id/sw_item_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:checked="@{alarmData.turnedOn}"
            android:showText="false"
            app:layout_constraintBottom_toBottomOf="@+id/tv_item_alarm_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_item_alarm_title" />

        <TextView
            android:id="@+id/tv_alarm_item_repeating_days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_item_alarm_title"
            app:layout_constraintEnd_toStartOf="@+id/sw_item_alarm"
            app:layout_constraintStart_toEndOf="@+id/tv_item_alarm_title"
            tools:text="pn, wt, sr, nd" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>