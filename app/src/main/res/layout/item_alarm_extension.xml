<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="alarmData"
            type="com.helpfulapps.alarmclock.clock_fragment.AlarmData" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_alarm_item_extension_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <ca.antonious.materialdaypicker.MaterialDayPicker
            android:id="@+id/wp_alarm_item_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_alarm_margin_left"
            android:layout_marginTop="@dimen/item_alarm_margin_top"
            android:layout_marginEnd="@dimen/item_alarm_margin_right"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/barrier_alarm_item_above_ringtone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_alarm_item_repeat" />

        <CheckBox
            android:id="@+id/cb_alarm_item_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_alarm_check_box_margin_left"
            android:layout_marginTop="@dimen/item_alarm_margin_top"
            android:text="Repeat"
            android:textSize="@dimen/item_alarm_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bt_alarm_item_remove"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_alarm_margin_top"
            android:layout_marginEnd="@dimen/item_alarm_margin_right"
            android:layout_marginBottom="@dimen/item_alarm_margin_bottom"
            android:drawableStart="@drawable/ic_delete"
            android:text="Remove"
            android:textSize="@dimen/item_alarm_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/barrier_alarm_item_above_remove" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_alarm_item_above_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="bt_alarm_item_ringtone_select"
            tools:layout_editor_absoluteY="731dp" />

        <Button
            android:id="@+id/bt_alarm_item_ringtone_select"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_alarm_margin_left"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_bell"
            android:text="There is a ringtone name"
            android:textAllCaps="false"
            android:textSize="@dimen/item_alarm_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrier_alarm_item_above_ringtone" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_alarm_item_above_ringtone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="cb_alarm_item_repeat,wp_alarm_item_picker"
            tools:layout_editor_absoluteY="204dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>