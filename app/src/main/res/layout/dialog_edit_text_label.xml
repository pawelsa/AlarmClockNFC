<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:backgroundTint="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/textColor"
        android:layout_marginLeft="@dimen/dialog_edit_text_margin"
        android:layout_marginTop="@dimen/dialog_edit_text_margin"
        android:layout_marginRight="@dimen/dialog_edit_text_margin">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_alarm_name"
            android:fontFamily="@font/comfortaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/textColor"
            android:hint="@string/hint_alarm_name"
            android:textSize="@dimen/dialog_edit_text_hint_size" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.cardview.widget.CardView>