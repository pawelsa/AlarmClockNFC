<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="textAppearanceBody1">@style/ComfortaaTextTheme</item>
        <item name="textAppearanceBody2">@style/ComfortaaTextTheme</item>
        <item name="textAppearanceButton">@style/ComfortaaTextTheme</item>
        <item name="textAppearanceCaption">@style/ComfortaaTextTheme</item>
        <item name="textAppearanceHeadline1">@style/ComfortaaTextTheme</item>
        <item name="textAppearanceHeadline2">@style/ComfortaaTextTheme</item>
        <item name="textAppearanceHeadline3">@style/ComfortaaTextTheme</item>
        <item name="textAppearanceListItem">@style/ComfortaaTextTheme</item>
        <item name="textAppearanceListItemSecondary">@style/ComfortaaTextTheme</item>
        <item name="textAppearanceListItemSmall">@style/ComfortaaTextTheme</item>
        <item name="textAppearanceLargePopupMenu">@style/PopupStyle</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="alertDialogStyle">@style/AlertDialogTheme</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="buttonStyle">@style/ComfortaaTextTheme</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="popupMenuStyle">@style/PopupMenuStyles</item>
    </style>

    <style name="PopupMenuStyles" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/background</item>
        <item name="android:itemBackground">@color/background</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="ComfortaaTextTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#b0bec5</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="ComfortaaButtonTextTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="IconTextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="iconTint">@color/colorAccent</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

    <style name="PopupStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/comfortaa</item>
    </style>

    <style name="SettingsTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="textColorAlertDialogListItem">@color/textColor</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="TimePickerTheme.Button" parent="Widget.MaterialComponents.Button.TextButton" />

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonStyle">@style/TimePickerTheme.Button</item>
        <item name="android:buttonBarButtonStyle">@style/TimePickerTheme.Button</item>
    </style>

    <style name="AlarmTimeClockTheme" parent="AppTheme">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:maxLength">5</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/add_alarm_time_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NewAlarmTitleTheme" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:iconTint" tools:targetApi="o">@color/colorAccent</item>
        <item name="iconTint">@color/colorAccent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/add_alarm_title_text_size</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="NewAlarmCheckboxTheme" parent="AppTheme">
        <item name="android:buttonTint">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="WeatherChipTheme" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="chipStrokeColor">@color/chip_color</item>
        <item name="chipStrokeWidth">@dimen/chip_stroke</item>
        <item name="chipBackgroundColor">@color/background</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAppearance">@style/WeatherChipTextTheme</item>
    </style>

    <style name="WeatherChipTextTheme" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="AlarmWeatherTextTheme" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="AlarmTimeTextTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/ringing_time_text_size</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlarmTitleTextTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/ringing_title_text_size</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="AlarmImageTheme" parent="AppTheme">
        <item name="android:layout_width">@dimen/ringing_image_size</item>
        <item name="android:layout_height">@dimen/ringing_image_size</item>
    </style>

    <style name="MainTabTheme" parent="AppTheme">
        <item name="android:layout_width">@dimen/icon_tab_size</item>
        <item name="android:layout_height">@dimen/icon_tab_size</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="CountTimeTextTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/timer_time_size</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:background">@color/background</item>
    </style>

</resources>
